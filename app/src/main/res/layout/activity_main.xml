<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ćwiczenie"
        android:textSize="24sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/iv_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_exercise"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historia"
        android:textSize="24sp"
        android:textColor="@color/text_color"
        android:layout_below="@id/iv_exercise"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_color"
        android:layout_below="@id/tv_history_title"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_generate_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wylosuj ćwiczenie"
        android:layout_below="@id/tv_history"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_color"/>

    <Button
        android:id="@+id/btn_save_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz ćwiczenie"
        android:layout_below="@id/btn_generate_exercise"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_color"/>

    <Button
        android:id="@+id/btn_clear_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyczyść historię"
        android:layout_below="@id/btn_save_exercise"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_color"/>

</RelativeLayout>